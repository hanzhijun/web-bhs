.out-side-nearby {
  background: #fff url('https://api.duishangbao.cn/upload/image/index_all_bj2.png') no-repeat 0 -1.3rem / 7.5rem 3.24rem
}

.out-side-nearby .mint-swipe {
  width: 7.1rem;
  height: 2.66rem;
  overflow: hidden;
  position: relative;
  margin: .88rem auto .1rem;
  border-radius: .1rem;
}

.out-side-nearby .mint-swipe-items-wrap {
  height: 100%;
  position: relative;
}

.out-side-nearby .mint-swipe-items-wrap img {
  width: 7.1rem !important;
  height: 2.66rem !important;
}

.out-side-nearby .near-nav {
  padding: .2rem 0 .2rem;
  background-color: #fff;
  overflow: hidden;
  border-bottom: .16rem solid #f4f4f4;
}

.out-side-nearby .near-nav .near-list {
  display: inline-block;
  width: 1.1rem;
  text-align: center;
  float: left;
  margin-left: .5rem;
}

.out-side-nearby .near-nav .near-list:first-child {
  margin-left: 0;
}

.out-side-nearby .near-nav .near-list .img {
  text-align: center;
  height: .7rem;
}

.out-side-nearby .near-nav .near-list .img img {
  width: .7rem;
  height: .7rem;
}

.out-side-nearby .near-nav .near-list .txt {
  padding: .1rem 0 .08rem;
}

.out-side-nearby .hot-header {
  overflow: hidden;
  padding: .2rem .2rem 0;
  line-height: .3rem;
}

.out-side-nearby .hot-header .hot {
  display: inline-block;
  padding-left: .2rem;
  border-left: 3px solid #e62343;
}

.out-side-nearby .hot-header .more {
  float: right;
}

.out-side-nearby .hot-sj-ul {
  display: block;
  overflow: hidden;
  padding: 0 .2rem .2rem;
}

.out-side-nearby .hot-sj-ul li {
  display: block;
  overflow: hidden;
  padding: 0 0 .4rem;
}

.out-side-nearby .hot-sj-ul li:first-child {
  padding-top: .35rem;
}

.out-side-nearby .hot-sj-ul li .border-line-heng-e6e6e6 {
  margin-bottom: .35rem;
}

.out-side-nearby .hot-sj-ul li:first-child .border-line-heng-e6e6e6 {
  display: none;
}

.out-side-nearby .hot-sj-ul .img {
  width: 1.88rem;
  height: 1.88rem;
  float: left;
  margin: .08rem .2rem 0 0;
}

.out-side-nearby .hot-sj-ul .img img {
  width: 1.88rem;
  height: 1.88rem;
  border-radius: .1rem;
}

.out-side-nearby .hot-sj-ul .main {
  width: 5rem;
  position: relative;
  float: left;
}

.out-side-nearby .hot-sj-ul .name {
  display: block;
  height: .4rem;
}

.out-side-nearby .hot-sj-ul .addr {
  display: block;
  height: .4rem;
}
.out-side-nearby .hot-sj-ul .price {
  display: block;
  height: .4rem;
}

.out-side-nearby .hot-sj-ul .label {
  width: 5rem;
  height: .34rem;
  line-height: .34rem;
  position: absolute;
  left: 0;
  top: 1.6rem;
}

.out-side-nearby .hot-sj-ul .label .di {
  display: inline-block;
  padding-left: .38rem;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu6.png') no-repeat 0 0 / .6rem 12rem;
  float: left;
}

.out-side-nearby .hot-sj-ul .label .tuan {
  width: 3.3rem;
  display: inline-block;
  padding-left: .38rem;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu6.png') no-repeat 0 -.6rem / .6rem 12rem;
  margin-left: .2rem;
}