
.out-side-index {
  background: #f4f4f4 url('https://api.duishangbao.cn/upload/image/index_all_bj.png') no-repeat top / 7.5rem 3.62rem;
  padding-bottom: .88rem;
}

.out-side-index .head-bar-index {
  height: 1.28rem;
}

.out-side-index .head-bar-index h2 {
  display: inline-block;
  line-height: .88rem;
  font-size: .34rem;
  color: #fff;
  float: left;
  padding-left: .2rem;
}

.out-side-index .banner-bar {
  width: 7.1rem;
  height: 3rem;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 0.1rem;
}

.out-side-index .banner-bar img {
  width: 7.1rem;
  height: 3rem;
}

.out-side-index .nav-bar {
  margin: .4rem 0 .25rem;
  background-color: #fff;
  overflow: hidden;
}

.out-side-index .nav-bar .nav-list {
  display: inline-block;
  width: 1.5rem;
  height: 1.85rem;
  float: left;
  overflow: hidden;
}

.out-side-index .nav-bar .nav-list .nav-img {
  padding-top: .15rem;
  text-align: center;
  overflow: hidden;
}

.out-side-index .nav-bar .nav-list .nav-img img {
  width: 1.12rem;
  height: 1.12rem;
}

.out-side-index .nav-bar .nav-list .nav-name {
  text-align: center;
  font-size: .26rem;
  line-height: .5rem;
  color: #000
}

.out-side-index .goods-list {
  background-color: #fff;
  overflow: hidden;
  margin-bottom: .24rem;
}

.out-side-index .goods-list .goods-img {
  text-align: center;
  padding: .2rem 0;
  overflow: hidden;
}

.out-side-index .goods-list .goods-img img {
  width: 4.6rem;
  height: 4.6rem;
}

.out-side-index .goods-name {
  line-height: .52rem;
  font-size: .32rem;
  color: #000;
  padding: 0 .2rem;
}

.out-side-index .goods-name i {
  display: inline-block;
  height: .46rem;
  line-height: .46rem;
  background: #fc6c15 url('https://api.duishangbao.cn/upload/image/icon_zu.png') no-repeat .1rem -4.95rem / .7rem 10rem;
  padding: 0 .1rem 0 .55rem;
  font-size: .32rem;
  color: #fff;
  border-radius: .05rem;
  margin-right: .1rem;
}

.out-side-index .goods-label {
  overflow: hidden;
  padding: .05rem 0 .15rem .2rem;
}

.out-side-index .goods-label .label-red {
  display: inline-block;
  float: left;
  padding: .02rem .08rem;
  font-size: .24rem;
  color: #e62343;
  border: .5px solid #fce4e8;
  border-radius: .08rem;
  margin-right: .1rem;
}

.out-side-index .goods-label .label-yellow {
  display: inline-block;
  float: left;
  padding: .02rem .08rem;
  font-size: .24rem;
  color: #fc6c15;
  border: .5px solid #fce4e8;
  border-radius: .08rem;
  margin-right: .1rem;
}

.out-side-index .goods-price {
  height: .88rem;
  position: relative;
  padding: 0 .2rem;
}

.out-side-index .goods-price .goods-btn-pay {
  display: inline-block;
  width: 2.18rem;
  padding: .06rem 0;
  background-color: #e62343;
  font-size: .36rem;
  color: #fff;
  text-align: center;
  position: absolute;
  top: 0;
  right: .2rem;
  border-radius: .08rem;
}

.out-side-index .goods-price .icon-rmb {
  display: inline-block;
  font-size: .24rem;
  color: #e62343;
  float: left;
  padding: .33rem .06rem 0 0;
}

.out-side-index .goods-price .goods-price-now {
  display: inline-block;
  font-size: .68rem;
  line-height: .68rem;
  color: #e62343;
  float: left;
  padding-top: 0
}

.out-side-index .goods-price .goods-price-old {
  display: inline-block;
  font-size: .24rem;
  color: #9c9c9c;
  float: left;
  padding: .33rem .06rem 0 .15rem;
  text-decoration: line-through;
}
