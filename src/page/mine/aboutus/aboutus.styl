.out-side-aboutus {
  background-color: #eee;
  padding-top: 8px;
}

.out-side-aboutus .icon_about {
  height: 100%;
  width: 100%;
  text-align: center;
  margin-top: 60px;
}

.out-side-aboutus .icon_about img {
  height: 65px;
  width: 65px;
}

.out-side-aboutus .title {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 24px;
  margin-top: 15px;
  color: #333;
}

.out-side-aboutus .ourInfo {
  padding-left: 25px;
  width: 200px;
  background-color: white;
  border-radius: 10px;
  margin: 60px auto;
  color: #999;
  border: .5px solid transparent;
}

.out-side-aboutus .ourInfo div {
  padding-top: 15px;
}

.out-side-aboutus .ourInfo div:last-child {
  padding-bottom: 15px;
}

.out-side-aboutus .hotline {
  margin-left: 8px;
}

.out-side-aboutus .permit {
  position: absolute;
  bottom: 100px;
  width: 100%;
  text-align: center;
  color: #333;
}

.out-side-aboutus .permit span {
  display: block;
  margin-top: 10px;
}