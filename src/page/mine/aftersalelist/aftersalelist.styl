.out-side-aftersalelist {
  background-color: #f4f4f4;
  min-height: 100vh;
  padding-top: .88rem;
}

.out-side-aftersalelist .goods-bar {
  background-color: #fff;
  overflow: hidden;
  padding: .35rem .2rem .4rem;
}

.out-side-aftersalelist .goods-bar .goods-img {
  width: 1.64rem;
  height: 1.64rem;
  float: left;
  margin: .05rem .18rem 0 0;
}

.out-side-aftersalelist .goods-bar .goods-img img {
  width: 1.64rem;
  height: 1.64rem;
  border-radius: .1rem;
}

.out-side-aftersalelist .goods-bar .goods-main {
  width: 5.28rem;
  overflow: hidden;
  float: left;
}

.out-side-aftersalelist .goods-bar .name {
  width: 100%;
  max-height: .8rem;
  line-height: .4rem;
}

.out-side-aftersalelist .goods-bar .sku {
  width: 100%;
  line-height: .4rem;
}

.out-side-aftersalelist .goods-bar .price-bar {
  line-height: .28rem;
  padding-top: .15rem;
}

.out-side-aftersalelist .goods-bar .price-bar .txt {
}

.out-side-aftersalelist .goods-bar .price-bar .price {
  display: inline-block;
  float: right;
}

.out-side-aftersalelist .after-ul {
  display: block;
  background-color: #fff;
  overflow: hidden;
  margin-top: .2rem;
  padding: 0 .2rem;
}

.out-side-aftersalelist .after-li {
  display: block;
  height: .9rem;
  position: relative;
  border-top: .5px solid #eee;
}

.out-side-aftersalelist .after-li:first-child {
  border-top: none;
}

.out-side-aftersalelist .after-li .txt {
  display: inline-block;
  line-height: .9rem;
}

.out-side-aftersalelist .after-li .icon {
  display: inline-block;
  width: .25rem;
  height: .25rem;
  position: absolute;
  right: 0;
  top: .32rem;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu2.png') no-repeat 0 -10.5rem / .7rem 11.9rem;
  z-index: 1;
}